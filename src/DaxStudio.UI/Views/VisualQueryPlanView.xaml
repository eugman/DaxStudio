<controls:ZoomableUserControl x:Class="DaxStudio.UI.Views.VisualQueryPlanView"
             xmlns:controls="clr-namespace:DaxStudio.UI.Controls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:DaxStudio.UI.Converters"
             xmlns:cal="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro.Platform"
             xmlns:local="clr-namespace:DaxStudio.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DaxStudio.UI;Component/Resources/DaxStudioResources.xaml" />
                <ResourceDictionary Source="pack://application:,,,/DaxStudio.UI;Component/Resources/Styles/LabelSpinnerStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/DaxStudio.UI;Component/Resources/Styles/DaxStudio.Spinner.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/DaxStudio.UI;Component/Resources/Styles/BusyPanel.xaml" />
                <ResourceDictionary Source="pack://application:,,,/DaxStudio.UI;Component/Resources/Styles/TraceWatcherStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <conv:BoolToHiddenConverter x:Key="BoolToVisibilityConverter" />
            <conv:BoolToHiddenConverter x:Key="BoolToHiddenConverter" />
            <conv:BoolToCollapsedConverter x:Key="BoolToCollapsedConverter" />
            <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

            <!-- Node Template for the graph -->
            <DataTemplate x:Key="PlanNodeTemplate">
                <Border Background="{Binding BackgroundBrush}"
                        BorderBrush="{Binding BorderBrush}"
                        BorderThickness="2"
                        CornerRadius="4"
                        Width="{Binding Width}"
                        Height="{Binding Height}"
                        Cursor="Hand"
                        ToolTip="{Binding TooltipText}">
                    <Grid Margin="8,4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Operation name -->
                        <TextBlock Grid.Row="0"
                                   Text="{Binding DisplayText}"
                                   FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis"
                                   VerticalAlignment="Center"/>

                        <!-- Records count -->
                        <TextBlock Grid.Row="2"
                                   Text="{Binding RecordsDisplay}"
                                   FontSize="10"
                                   Foreground="{DynamicResource MutedTextBrush}"
                                   Visibility="{Binding RecordsDisplay, Converter={StaticResource StringToVisibilityConverter}}"/>

                        <!-- Issue indicator -->
                        <Ellipse Grid.Row="0"
                                 Width="12" Height="12"
                                 Fill="#FFD700"
                                 Stroke="#FF8C00"
                                 StrokeThickness="1"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Top"
                                 Margin="0,-2,-2,0"
                                 Visibility="{Binding HasIssues, Converter={StaticResource BoolToCollapsedConverter}}"
                                 ToolTip="This node has performance issues">
                        </Ellipse>
                    </Grid>
                </Border>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Status text -->
        <TextBlock x:Name="TraceStatusText"
                   Grid.Row="0"
                   Text="{Binding TraceStatusText}"
                   Visibility="{Binding TraceStatusText, Converter={StaticResource StringToVisibilityConverter}}"
                   Background="{DynamicResource WarningBarBackgroundBrush}"
                   Foreground="{StaticResource MutedTextBrush}"
                   Padding="5,1,0,1"/>

        <!-- Command bar -->
        <controls:ClipBorder Grid.Row="1"
                             CornerRadius="4"
                             Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                             Margin="0 0 0 8">
            <DockPanel LastChildFill="False">
                <!-- Record/Pause/Stop buttons -->
                <ToggleButton DockPanel.Dock="Left"
                              Style="{StaticResource TraceToggleButton}"
                              IsChecked="{Binding IsRecording}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource record_toolbarDrawingImage}" Margin="0 0 4 0"/>
                        <TextBlock>Record</TextBlock>
                    </StackPanel>
                </ToggleButton>

                <ToggleButton DockPanel.Dock="Left"
                              Style="{StaticResource TraceToggleButton}"
                              IsChecked="{Binding IsPaused}"
                              IsEnabled="{Binding CanPause}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource pause_toolbarDrawingImage}" Margin="0 0 4 0"/>
                        <TextBlock>Pause</TextBlock>
                    </StackPanel>
                </ToggleButton>

                <ToggleButton DockPanel.Dock="Left"
                              Style="{StaticResource TraceToggleButton}"
                              IsChecked="{Binding IsStopped}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource cancelDrawingImage}" Width="16" Margin="0 0 4 0"/>
                        <TextBlock>Stop</TextBlock>
                    </StackPanel>
                </ToggleButton>

                <Button DockPanel.Dock="Left"
                        Style="{StaticResource TraceButton}"
                        cal:Message.Attach="[Event Click] = [Action ClearAll]">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource clear_toolbarDrawingImage}" Margin="0 0 4 0"/>
                        <TextBlock>Clear</TextBlock>
                    </StackPanel>
                </Button>

                <Rectangle DockPanel.Dock="Left" Width="1" Fill="{DynamicResource Theme.Brush.Control.Border}" Margin="8,4"/>

                <!-- Plan type toggle -->
                <ToggleButton DockPanel.Dock="Left"
                              Style="{StaticResource TraceToggleButton}"
                              IsChecked="{Binding ShowPhysicalPlan}">
                    <TextBlock>Physical</TextBlock>
                </ToggleButton>

                <ToggleButton DockPanel.Dock="Left"
                              Style="{StaticResource TraceToggleButton}"
                              IsChecked="{Binding ShowLogicalPlan}">
                    <TextBlock>Logical</TextBlock>
                </ToggleButton>

                <Rectangle DockPanel.Dock="Left" Width="1" Fill="{DynamicResource Theme.Brush.Control.Border}" Margin="8,4"/>

                <!-- Zoom controls -->
                <Button DockPanel.Dock="Left"
                        Style="{StaticResource TraceButton}"
                        cal:Message.Attach="[Event Click] = [Action ZoomOut]"
                        ToolTip="Zoom Out">
                    <TextBlock FontFamily="Segoe UI Symbol" FontSize="14">&#xE1A4;</TextBlock>
                </Button>

                <TextBlock DockPanel.Dock="Left"
                           Text="{Binding ZoomPercentage}"
                           VerticalAlignment="Center"
                           Margin="8,0"
                           MinWidth="40"
                           TextAlignment="Center"/>

                <Button DockPanel.Dock="Left"
                        Style="{StaticResource TraceButton}"
                        cal:Message.Attach="[Event Click] = [Action ZoomIn]"
                        ToolTip="Zoom In">
                    <TextBlock FontFamily="Segoe UI Symbol" FontSize="14">&#xE12E;</TextBlock>
                </Button>

                <Button DockPanel.Dock="Left"
                        Style="{StaticResource TraceButton}"
                        cal:Message.Attach="[Event Click] = [Action ZoomToFit]"
                        ToolTip="Reset Zoom">
                    <TextBlock FontFamily="Segoe UI Symbol" FontSize="14">&#xE1A3;</TextBlock>
                </Button>

                <Rectangle DockPanel.Dock="Left" Width="1" Fill="{DynamicResource Theme.Brush.Control.Border}" Margin="8,4"/>

                <!-- Export and Info buttons -->
                <Button DockPanel.Dock="Left"
                        Style="{StaticResource TraceButton}"
                        cal:Message.Attach="[Event Click] = [Action Export]"
                        IsEnabled="{Binding CanExport}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource save_toolbarDrawingImage}" Margin="0 0 4 0"/>
                        <TextBlock>Export</TextBlock>
                    </StackPanel>
                </Button>

                <Button DockPanel.Dock="Left"
                        Style="{StaticResource TraceButton}"
                        cal:Message.Attach="[Event Click] = [Action ShowTraceDiagnostics]"
                        IsEnabled="{Binding CanShowTraceDiagnostics}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource aboutDrawingImage}" Width="16" Height="16" Margin="0 0 4 0"/>
                        <TextBlock>Info</TextBlock>
                    </StackPanel>
                </Button>
            </DockPanel>
        </controls:ClipBorder>

        <!-- Main content area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200" MinWidth="150"/>
            </Grid.ColumnDefinitions>

            <!-- Graph view -->
            <controls:ClipBorder Grid.Column="0"
                                 CornerRadius="4"
                                 BorderThickness="1"
                                 BorderBrush="{DynamicResource Theme.Brush.Control.Border}"
                                 Style="{StaticResource BusyBlur}">
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              Background="{DynamicResource Theme.Brush.Content.Back}">
                    <Canvas x:Name="PlanCanvas"
                            Background="Transparent"
                            Width="2000" Height="2000"
                            ClipToBounds="False">
                        <Canvas.LayoutTransform>
                            <ScaleTransform ScaleX="{Binding ZoomLevel}" ScaleY="{Binding ZoomLevel}"/>
                        </Canvas.LayoutTransform>

                        <!-- Edges (lines connecting nodes) -->
                        <ItemsControl ItemsSource="{Binding AllNodes}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ItemsControl ItemsSource="{Binding Children}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <Canvas/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Path Stroke="{DynamicResource Theme.Brush.Control.Border}"
                                                      StrokeThickness="1.5"
                                                      Fill="Transparent">
                                                    <Path.Data>
                                                        <PathGeometry>
                                                            <PathFigure StartPoint="{Binding Parent.EdgeBottom}">
                                                                <BezierSegment Point1="{Binding Parent.EdgeBottomControl}"
                                                                               Point2="{Binding EdgeTopControl}"
                                                                               Point3="{Binding EdgeTop}"/>
                                                            </PathFigure>
                                                        </PathGeometry>
                                                    </Path.Data>
                                                </Path>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Nodes -->
                        <ItemsControl ItemsSource="{Binding AllNodes}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                    <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding BackgroundBrush}"
                                            BorderBrush="{Binding BorderBrush}"
                                            BorderThickness="2"
                                            CornerRadius="4"
                                            Width="{Binding Width}"
                                            Height="{Binding Height}"
                                            Cursor="Hand"
                                            ToolTip="{Binding TooltipText}"
                                            cal:Message.Attach="[Event MouseLeftButtonDown] = [Action SelectNode($dataContext)]">
                                        <Grid Margin="8,4">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Operation name -->
                                            <TextBlock Grid.Row="0"
                                                       Text="{Binding DisplayText}"
                                                       FontWeight="SemiBold"
                                                       TextTrimming="CharacterEllipsis"
                                                       VerticalAlignment="Center"/>

                                            <!-- Records count -->
                                            <TextBlock Grid.Row="2"
                                                       Text="{Binding RecordsDisplay}"
                                                       FontSize="10"
                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                       Visibility="{Binding RecordsDisplay, Converter={StaticResource StringToVisibilityConverter}}"/>

                                            <!-- Issue indicator -->
                                            <Ellipse Grid.Row="0"
                                                     Width="12" Height="12"
                                                     Fill="#FFD700"
                                                     Stroke="#FF8C00"
                                                     StrokeThickness="1"
                                                     HorizontalAlignment="Right"
                                                     VerticalAlignment="Top"
                                                     Margin="0,-2,-2,0"
                                                     Visibility="{Binding HasIssues, Converter={StaticResource BoolToCollapsedConverter}}"
                                                     ToolTip="This node has performance issues"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Canvas>
                </ScrollViewer>
            </controls:ClipBorder>

            <GridSplitter Grid.Column="1"
                          Width="5"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="Transparent"/>

            <!-- Right panel with TabControl for Issues and Node Details -->
            <controls:ClipBorder Grid.Column="2"
                                 CornerRadius="4"
                                 BorderThickness="1"
                                 BorderBrush="{DynamicResource Theme.Brush.Control.Border}">
                <TabControl Background="{DynamicResource Theme.Brush.Content.Back}"
                            BorderThickness="0">
                    <!-- Issues Tab -->
                    <TabItem Header="Issues">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Issues count header -->
                            <Border Grid.Row="0"
                                    Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                                    Padding="8,4">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding IssueCount}" FontWeight="SemiBold"/>
                                    <TextBlock Text=" issue(s) detected" Foreground="{DynamicResource MutedTextBrush}"/>
                                </StackPanel>
                            </Border>

                            <!-- Issues list with expandable items -->
                            <ListBox Grid.Row="1"
                                     ItemsSource="{Binding Issues}"
                                     SelectedItem="{Binding SelectedIssue}"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding BackgroundBrush}"
                                                BorderBrush="{DynamicResource Theme.Brush.Control.Border}"
                                                BorderThickness="0,0,0,1"
                                                Padding="0">
                                            <StackPanel>
                                                <!-- Issue header (always visible) -->
                                                <Grid Margin="8,6" Cursor="Hand"
                                                      cal:Message.Attach="[Event MouseLeftButtonDown] = [Action ToggleExpanded]">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Severity icon -->
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding SeverityIcon}"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="14"
                                                               Foreground="{Binding SeverityBrush}"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,8,0"/>

                                                    <!-- Title -->
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding Title}"
                                                               FontWeight="SemiBold"
                                                               TextTrimming="CharacterEllipsis"
                                                               VerticalAlignment="Center"/>

                                                    <!-- Expand/collapse indicator -->
                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding ExpanderIcon}"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="10"
                                                               Foreground="{DynamicResource MutedTextBrush}"
                                                               VerticalAlignment="Center"
                                                               Margin="4,0,0,0"/>
                                                </Grid>

                                                <!-- Expanded details -->
                                                <StackPanel Margin="32,0,8,8"
                                                            Visibility="{Binding IsExpanded, Converter={StaticResource BoolToCollapsedConverter}}">
                                                    <!-- Description -->
                                                    <TextBlock Text="{Binding Description}"
                                                               TextWrapping="Wrap"
                                                               FontSize="11"
                                                               Foreground="{DynamicResource MutedTextBrush}"
                                                               Margin="0,0,0,4"/>

                                                    <!-- Metric info -->
                                                    <StackPanel Orientation="Horizontal"
                                                                Visibility="{Binding HasMetricInfo, Converter={StaticResource BoolToCollapsedConverter}}"
                                                                Margin="0,4,0,0">
                                                        <TextBlock Text="Value: " FontSize="11" Foreground="{DynamicResource MutedTextBrush}"/>
                                                        <TextBlock Text="{Binding MetricDisplay}" FontSize="11" FontWeight="SemiBold"/>
                                                        <TextBlock Text=" / Threshold: " FontSize="11" Foreground="{DynamicResource MutedTextBrush}"/>
                                                        <TextBlock Text="{Binding ThresholdDisplay}" FontSize="11" FontWeight="SemiBold"/>
                                                    </StackPanel>

                                                    <!-- Remediation suggestion -->
                                                    <Border Visibility="{Binding HasRemediation, Converter={StaticResource BoolToCollapsedConverter}}"
                                                            Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                                                            CornerRadius="3"
                                                            Margin="0,8,0,0"
                                                            Padding="8,6">
                                                        <StackPanel>
                                                            <TextBlock Text="Suggestion"
                                                                       FontWeight="SemiBold"
                                                                       FontSize="10"
                                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                                       Margin="0,0,0,4"/>
                                                            <TextBlock Text="{Binding Remediation}"
                                                                       TextWrapping="Wrap"
                                                                       FontSize="11"/>
                                                        </StackPanel>
                                                    </Border>

                                                    <!-- Navigate to node button -->
                                                    <Button Content="Go to Node"
                                                            Margin="0,8,0,0"
                                                            Padding="8,4"
                                                            HorizontalAlignment="Left"
                                                            cal:Message.Attach="[Event Click] = [Action NavigateToIssue($dataContext)]"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <!-- No issues message -->
                            <TextBlock Grid.Row="1"
                                       Text="No issues detected"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource MutedTextBrush}"
                                       Visibility="{Binding HasIssues, Converter={StaticResource BoolToHiddenConverter}}"/>
                        </Grid>
                    </TabItem>

                    <!-- Node Details Tab -->
                    <TabItem Header="Node Details">
                        <Grid>
                            <!-- No node selected message -->
                            <TextBlock Text="Select a node to view details"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource MutedTextBrush}"
                                       Visibility="{Binding HasSelectedNode, Converter={StaticResource BoolToHiddenConverter}}"/>

                            <!-- Node details content -->
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled"
                                          Visibility="{Binding HasSelectedNode, Converter={StaticResource BoolToCollapsedConverter}}">
                                <StackPanel Margin="8" DataContext="{Binding SelectedNode}">
                                    <!-- Node header -->
                                    <Border Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                                            CornerRadius="4"
                                            Padding="8"
                                            Margin="0,0,0,8">
                                        <StackPanel>
                                            <TextBlock Text="{Binding DisplayText}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding EngineTypeDisplay}"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Full Operation -->
                                    <TextBlock Text="Operation"
                                               FontWeight="SemiBold"
                                               FontSize="11"
                                               Foreground="{DynamicResource MutedTextBrush}"
                                               Margin="0,0,0,4"/>
                                    <Border Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                                            CornerRadius="3"
                                            Padding="6"
                                            Margin="0,0,0,12">
                                        <TextBlock Text="{Binding FullOperation}"
                                                   TextWrapping="Wrap"
                                                   FontFamily="Consolas"
                                                   FontSize="11"/>
                                    </Border>

                                    <!-- Metrics Section -->
                                    <TextBlock Text="Metrics"
                                               FontWeight="SemiBold"
                                               FontSize="11"
                                               Foreground="{DynamicResource MutedTextBrush}"
                                               Margin="0,0,0,4"/>
                                    <Border Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                                            CornerRadius="3"
                                            Padding="8"
                                            Margin="0,0,0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Node ID -->
                                            <TextBlock Grid.Row="0" Grid.Column="0"
                                                       Text="Node ID:"
                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                       Margin="0,0,12,4"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1"
                                                       Text="{Binding NodeId}"
                                                       FontWeight="SemiBold"
                                                       Margin="0,0,0,4"/>

                                            <!-- Records -->
                                            <TextBlock Grid.Row="1" Grid.Column="0"
                                                       Text="Records:"
                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                       Margin="0,0,12,4"
                                                       Visibility="{Binding HasRecords, Converter={StaticResource BoolToCollapsedConverter}}"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1"
                                                       Text="{Binding RecordsDisplay}"
                                                       FontWeight="SemiBold"
                                                       Margin="0,0,0,4"
                                                       Visibility="{Binding HasRecords, Converter={StaticResource BoolToCollapsedConverter}}"/>

                                            <!-- Cost -->
                                            <TextBlock Grid.Row="2" Grid.Column="0"
                                                       Text="Cost:"
                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                       Margin="0,0,12,4"
                                                       Visibility="{Binding HasCost, Converter={StaticResource BoolToCollapsedConverter}}"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1"
                                                       Text="{Binding CostDisplay}"
                                                       FontWeight="SemiBold"
                                                       Margin="0,0,0,4"
                                                       Visibility="{Binding HasCost, Converter={StaticResource BoolToCollapsedConverter}}"/>

                                            <!-- Duration -->
                                            <TextBlock Grid.Row="3" Grid.Column="0"
                                                       Text="Duration:"
                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                       Margin="0,0,12,4"
                                                       Visibility="{Binding HasDuration, Converter={StaticResource BoolToCollapsedConverter}}"/>
                                            <TextBlock Grid.Row="3" Grid.Column="1"
                                                       Text="{Binding DurationDisplay}"
                                                       FontWeight="SemiBold"
                                                       Margin="0,0,0,4"
                                                       Visibility="{Binding HasDuration, Converter={StaticResource BoolToCollapsedConverter}}"/>

                                            <!-- Level -->
                                            <TextBlock Grid.Row="4" Grid.Column="0"
                                                       Text="Level:"
                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                       Margin="0,0,12,0"/>
                                            <TextBlock Grid.Row="4" Grid.Column="1"
                                                       Text="{Binding Level}"
                                                       FontWeight="SemiBold"/>
                                        </Grid>
                                    </Border>

                                    <!-- Tree Position Section -->
                                    <TextBlock Text="Tree Position"
                                               FontWeight="SemiBold"
                                               FontSize="11"
                                               Foreground="{DynamicResource MutedTextBrush}"
                                               Margin="0,0,0,4"/>
                                    <Border Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                                            CornerRadius="3"
                                            Padding="8"
                                            Margin="0,0,0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Parent -->
                                            <TextBlock Grid.Row="0" Grid.Column="0"
                                                       Text="Parent:"
                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                       Margin="0,0,12,4"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1"
                                                       Text="{Binding ParentInfo}"
                                                       TextWrapping="Wrap"
                                                       Margin="0,0,0,4"/>

                                            <!-- Children -->
                                            <TextBlock Grid.Row="1" Grid.Column="0"
                                                       Text="Children:"
                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                       Margin="0,0,12,0"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1"
                                                       Text="{Binding ChildCount}"/>
                                        </Grid>
                                    </Border>

                                    <!-- Issues Section (if any) -->
                                    <StackPanel Visibility="{Binding HasIssues, Converter={StaticResource BoolToCollapsedConverter}}">
                                        <TextBlock Text="Issues"
                                                   FontWeight="SemiBold"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource MutedTextBrush}"
                                                   Margin="0,0,0,4"/>
                                        <ItemsControl ItemsSource="{Binding Issues}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                                                            BorderBrush="#FFFFA500"
                                                            BorderThickness="0,0,0,2"
                                                            CornerRadius="3"
                                                            Padding="8"
                                                            Margin="0,0,0,4">
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding IssueType}"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="#FFFF8C00"/>
                                                            <TextBlock Text="{Binding Description}"
                                                                       TextWrapping="Wrap"
                                                                       FontSize="11"
                                                                       Margin="0,4,0,0"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </TabItem>
                </TabControl>
            </controls:ClipBorder>
        </Grid>

        <!-- Busy overlay -->
        <Border Grid.Row="1" Grid.RowSpan="2"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                Style="{StaticResource BusyPanel}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <ProgressBar x:Name="spinner"
                             Style="{StaticResource MaterialDesignCircularProgressBar}"
                             Width="24" Height="24"
                             Margin="0 0 10 0"
                             Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <Label x:Name="BusyMessage" Style="{StaticResource SpinnerLabel}"/>
            </StackPanel>
        </Border>
    </Grid>
</controls:ZoomableUserControl>
