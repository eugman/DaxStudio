<UserControl x:Class="DaxStudio.UI.Views.VisualQueryPlanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:DaxStudio.UI.Controls"
             xmlns:conv="clr-namespace:DaxStudio.UI.Converters"
             xmlns:cal="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro.Platform"
             xmlns:local="clr-namespace:DaxStudio.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DaxStudio.UI;Component/Resources/DaxStudioResources.xaml" />
                <ResourceDictionary Source="pack://application:,,,/DaxStudio.UI;Component/Resources/Styles/LabelSpinnerStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/DaxStudio.UI;Component/Resources/Styles/DaxStudio.Spinner.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/DaxStudio.UI;Component/Resources/Styles/BusyPanel.xaml" />
                <ResourceDictionary Source="pack://application:,,,/DaxStudio.UI;Component/Resources/Styles/TraceWatcherStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <conv:BoolToHiddenConverter x:Key="BoolToVisibilityConverter" />
            <conv:BoolToHiddenConverter x:Key="BoolToHiddenConverter" />
            <conv:BoolToCollapsedConverter x:Key="BoolToCollapsedConverter" />
            <conv:BoolToNotCollapsedConverter x:Key="BoolToNotCollapsedConverter" />
            <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

            <!-- Node Template for the graph -->
            <DataTemplate x:Key="PlanNodeTemplate">
                <Border Background="{Binding BackgroundBrush}"
                        BorderBrush="{Binding BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Width="{Binding Width}"
                        Height="{Binding Height}"
                        Cursor="Hand"
                        ToolTip="{Binding TooltipText}"
                        ToolTipService.InitialShowDelay="200"
                        ToolTipService.ShowDuration="30000">
                    <Grid Margin="8,4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Operation name -->
                        <TextBlock Grid.Row="0"
                                   Text="{Binding DisplayText}"
                                   FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis"
                                   VerticalAlignment="Center"/>

                        <!-- Records count -->
                        <TextBlock Grid.Row="2"
                                   Text="{Binding RecordsDisplay}"
                                   FontSize="10"
                                   Foreground="{DynamicResource MutedTextBrush}"
                                   Visibility="{Binding RecordsDisplay, Converter={StaticResource StringToVisibilityConverter}}"/>

                        <!-- Issue indicator -->
                        <Ellipse Grid.Row="0"
                                 Width="12" Height="12"
                                 Fill="#FFD700"
                                 Stroke="#FF8C00"
                                 StrokeThickness="1"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Top"
                                 Margin="0,-2,-2,0"
                                 Visibility="{Binding HasIssues, Converter={StaticResource BoolToCollapsedConverter}}"
                                 ToolTip="This node has performance issues">
                        </Ellipse>
                    </Grid>
                </Border>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Status text -->
        <TextBlock x:Name="TraceStatusText"
                   Grid.Row="0"
                   Text="{Binding TraceStatusText}"
                   Visibility="{Binding TraceStatusText, Converter={StaticResource StringToVisibilityConverter}}"
                   Background="{DynamicResource WarningBarBackgroundBrush}"
                   Foreground="{StaticResource MutedTextBrush}"
                   Padding="5,1,0,1"/>

        <!-- Command bar -->
        <controls:ClipBorder Grid.Row="1"
                             CornerRadius="4"
                             Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                             Margin="0 0 0 8">
            <DockPanel LastChildFill="False">
                <!-- Record/Pause/Stop buttons -->
                <ToggleButton DockPanel.Dock="Left"
                              Style="{StaticResource TraceToggleButton}"
                              IsChecked="{Binding IsRecording}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource record_toolbarDrawingImage}" Margin="0 0 4 0"/>
                        <TextBlock>Record</TextBlock>
                    </StackPanel>
                </ToggleButton>

                <ToggleButton DockPanel.Dock="Left"
                              Style="{StaticResource TraceToggleButton}"
                              IsChecked="{Binding IsPaused}"
                              IsEnabled="{Binding CanPause}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource pause_toolbarDrawingImage}" Margin="0 0 4 0"/>
                        <TextBlock>Pause</TextBlock>
                    </StackPanel>
                </ToggleButton>

                <ToggleButton DockPanel.Dock="Left"
                              Style="{StaticResource TraceToggleButton}"
                              IsChecked="{Binding IsStopped}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource cancelDrawingImage}" Width="16" Margin="0 0 4 0"/>
                        <TextBlock>Stop</TextBlock>
                    </StackPanel>
                </ToggleButton>

                <Button DockPanel.Dock="Left"
                        Style="{StaticResource TraceButton}"
                        cal:Message.Attach="[Event Click] = [Action ClearAll]">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource clear_toolbarDrawingImage}" Margin="0 0 4 0"/>
                        <TextBlock>Clear</TextBlock>
                    </StackPanel>
                </Button>

                <Rectangle DockPanel.Dock="Left" Width="1" Fill="{DynamicResource Theme.Brush.Control.Border}" Margin="8,4"/>

                <!-- Plan type toggle -->
                <ToggleButton DockPanel.Dock="Left"
                              Style="{StaticResource TraceToggleButton}"
                              IsChecked="{Binding ShowPhysicalPlan}">
                    <TextBlock>Physical</TextBlock>
                </ToggleButton>

                <ToggleButton DockPanel.Dock="Left"
                              Style="{StaticResource TraceToggleButton}"
                              IsChecked="{Binding ShowLogicalPlan}">
                    <TextBlock>Logical</TextBlock>
                </ToggleButton>

                <Rectangle DockPanel.Dock="Left" Width="1" Fill="{DynamicResource Theme.Brush.Control.Border}" Margin="8,4"/>

                <!-- Zoom controls -->
                <Button DockPanel.Dock="Left"
                        Style="{StaticResource TraceButton}"
                        cal:Message.Attach="[Event Click] = [Action ZoomOut]"
                        ToolTip="Zoom Out">
                    <TextBlock FontFamily="Segoe UI Symbol" FontSize="14">&#xE1A4;</TextBlock>
                </Button>

                <TextBlock DockPanel.Dock="Left"
                           Text="{Binding ZoomPercentage}"
                           VerticalAlignment="Center"
                           Margin="8,0"
                           MinWidth="40"
                           TextAlignment="Center"/>

                <Button DockPanel.Dock="Left"
                        Style="{StaticResource TraceButton}"
                        cal:Message.Attach="[Event Click] = [Action ZoomIn]"
                        ToolTip="Zoom In">
                    <TextBlock FontFamily="Segoe UI Symbol" FontSize="14">&#xE12E;</TextBlock>
                </Button>

                <Button DockPanel.Dock="Left"
                        Style="{StaticResource TraceButton}"
                        cal:Message.Attach="[Event Click] = [Action ZoomToFit]"
                        ToolTip="Reset Zoom">
                    <TextBlock FontFamily="Segoe UI Symbol" FontSize="14">&#xE1A3;</TextBlock>
                </Button>

                <Rectangle DockPanel.Dock="Left" Width="1" Fill="{DynamicResource Theme.Brush.Control.Border}" Margin="8,4"/>

                <!-- Export and Info buttons -->
                <Button DockPanel.Dock="Left"
                        Style="{StaticResource TraceButton}"
                        cal:Message.Attach="[Event Click] = [Action Export]"
                        IsEnabled="{Binding CanExport}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource save_toolbarDrawingImage}" Margin="0 0 4 0"/>
                        <TextBlock>Export</TextBlock>
                    </StackPanel>
                </Button>

                <Button DockPanel.Dock="Left"
                        Style="{StaticResource TraceButton}"
                        cal:Message.Attach="[Event Click] = [Action ShowTraceDiagnostics]"
                        IsEnabled="{Binding CanShowTraceDiagnostics}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource aboutDrawingImage}" Width="16" Height="16" Margin="0 0 4 0"/>
                        <TextBlock>Info</TextBlock>
                    </StackPanel>
                </Button>
            </DockPanel>
        </controls:ClipBorder>

        <!-- Main content area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200" MinWidth="150"/>
            </Grid.ColumnDefinitions>

            <!-- Graph view -->
            <controls:ClipBorder Grid.Column="0"
                                 CornerRadius="4"
                                 BorderThickness="1"
                                 BorderBrush="{DynamicResource Theme.Brush.Control.Border}"
                                 Style="{StaticResource BusyBlur}">
                <ScrollViewer x:Name="PlanScrollViewer"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              Background="{DynamicResource Theme.Brush.Content.Back}">
                    <Canvas x:Name="PlanCanvas"
                            Background="Transparent"
                            Width="{Binding ActualContentWidth}"
                            Height="{Binding ActualContentHeight}"
                            ClipToBounds="False">
                        <Canvas.LayoutTransform>
                            <ScaleTransform ScaleX="{Binding ZoomLevel}" ScaleY="{Binding ZoomLevel}"/>
                        </Canvas.LayoutTransform>

                        <!-- Edges (lines connecting nodes) -->
                        <ItemsControl ItemsSource="{Binding AllNodes}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Use VisibleChildren to exclude collapsed child nodes from edge rendering -->
                                    <ItemsControl ItemsSource="{Binding VisibleChildren}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <Canvas/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Path Stroke="{Binding EdgeColor}"
                                                      StrokeThickness="{Binding EdgeThickness}"
                                                      Fill="Transparent"
                                                      Opacity="0.85"
                                                      ToolTipService.InitialShowDelay="200"
                                                      ToolTipService.ShowDuration="30000">
                                                    <Path.ToolTip>
                                                        <ToolTip>
                                                            <StackPanel MinWidth="140">
                                                                <TextBlock Text="Data Flow" FontWeight="Bold" FontSize="11" Margin="0,0,0,4"/>
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                    </Grid.RowDefinitions>
                                                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Rows:" Foreground="Gray" Margin="0,0,8,2"/>
                                                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding RowsDisplayFormatted}" FontWeight="SemiBold" Foreground="{Binding RowCountColor}"/>
                                                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Size:" Foreground="Gray" Margin="0,0,8,2" Visibility="{Binding HasDataSize, Converter={StaticResource BoolToCollapsedConverter}}"/>
                                                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DataSizeDisplay}" FontWeight="SemiBold" Visibility="{Binding HasDataSize, Converter={StaticResource BoolToCollapsedConverter}}"/>
                                                                    <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding OperatorDisplayName}" FontSize="10" Foreground="Gray" Margin="0,4,0,0"/>
                                                                </Grid>
                                                            </StackPanel>
                                                        </ToolTip>
                                                    </Path.ToolTip>
                                                    <Path.Data>
                                                        <PathGeometry>
                                                            <PathFigure StartPoint="{Binding Parent.EdgeBottom}">
                                                                <BezierSegment Point1="{Binding Parent.EdgeBottomControl}"
                                                                               Point2="{Binding EdgeTopControl}"
                                                                               Point3="{Binding EdgeTop}"/>
                                                            </PathFigure>
                                                        </PathGeometry>
                                                    </Path.Data>
                                                </Path>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Nodes -->
                        <ItemsControl ItemsSource="{Binding AllNodes}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                    <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding BackgroundBrush}"
                                            BorderBrush="{Binding BorderBrush}"
                                            BorderThickness="2"
                                            CornerRadius="4"
                                            Width="{Binding Width}"
                                            Height="{Binding Height}"
                                            Cursor="Hand"
                                            cal:Action.TargetWithoutContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            cal:Message.Attach="[Event MouseLeftButtonDown] = [Action SelectNode($dataContext)]">
                                        <Border.ToolTip>
                                            <ToolTip MaxWidth="500">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding OperatorDisplayName}" FontWeight="Bold" FontSize="12"/>
                                                    <TextBlock Text="{Binding OperatorCategory}" Foreground="Gray" FontSize="10" Margin="0,2,0,4"/>
                                                    <TextBlock Text="{Binding OperatorDescription}" TextWrapping="Wrap" FontSize="11"/>
                                                    <!-- DAX formula section (only visible when HasMeasureFormula is true) -->
                                                    <Separator Margin="0,6" Visibility="{Binding HasMeasureFormula, Converter={StaticResource BoolToCollapsedConverter}}"/>
                                                    <TextBlock Text="DAX:" FontWeight="SemiBold" FontSize="10" Foreground="#0066CC"
                                                               Visibility="{Binding HasMeasureFormula, Converter={StaticResource BoolToCollapsedConverter}}"/>
                                                    <TextBlock Text="{Binding MeasureFormula}" FontFamily="Consolas" FontSize="10" TextWrapping="Wrap" Foreground="#333" Margin="0,2,0,0"
                                                               Visibility="{Binding HasMeasureFormula, Converter={StaticResource BoolToCollapsedConverter}}"/>
                                                    <Separator Margin="0,6"/>
                                                    <TextBlock Text="Operation:" FontWeight="SemiBold" FontSize="10" Foreground="#444"/>
                                                    <TextBlock Text="{Binding FullOperation}" FontFamily="Consolas" FontSize="10" TextWrapping="Wrap" Foreground="#666" Margin="0,2,0,0"/>
                                                    <!-- xmSQL section (only visible when HasXmSql is true) -->
                                                    <TextBlock Text="xmSQL:" FontWeight="SemiBold" FontSize="10" Foreground="#444" Margin="0,8,0,0"
                                                               Visibility="{Binding HasXmSql, Converter={StaticResource BoolToCollapsedConverter}}"/>
                                                    <TextBlock Text="{Binding ResolvedXmSql}" FontFamily="Consolas" FontSize="10" TextWrapping="Wrap" Foreground="#666" Margin="0,2,0,0"
                                                               Visibility="{Binding HasXmSql, Converter={StaticResource BoolToCollapsedConverter}}"/>
                                                </StackPanel>
                                            </ToolTip>
                                        </Border.ToolTip>
                                        <Grid Margin="6,4">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- Operation name with optional detail (name bold, detail normal) -->
                                            <!-- Row 0: [SE/FE badge] Operator name + detail -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <!-- Engine badge (SE=blue, FE=orange) - at start of line -->
                                                <Border Grid.Column="0"
                                                        CornerRadius="3"
                                                        Padding="5,1"
                                                        Margin="0,0,6,0"
                                                        VerticalAlignment="Top"
                                                        Background="{Binding EngineBadgeBackground}"
                                                        Visibility="{Binding HasEngineBadge, Converter={StaticResource BoolToCollapsedConverter}}">
                                                    <TextBlock Text="{Binding EngineBadge}"
                                                               FontSize="9"
                                                               FontWeight="Bold"
                                                               Foreground="{Binding EngineBadgeForeground}"/>
                                                </Border>
                                                <!-- Operator name + detail (with proper text wrapping) -->
                                                <TextBlock Grid.Column="1"
                                                           FontSize="11"
                                                           Foreground="#FF333333"
                                                           TextWrapping="Wrap"
                                                           TextTrimming="CharacterEllipsis"
                                                           VerticalAlignment="Top">
                                                    <Run Text="{Binding DisplayName, Mode=OneWay}" FontWeight="SemiBold"/><Run Text="{Binding DisplayDetailWithColon, Mode=OneWay}" FontWeight="Normal"/>
                                                </TextBlock>
                                            </Grid>

                                            <!-- Row 1: Row count (right-aligned) -->
                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding RowsDisplayFormatted}"
                                                       FontSize="10"
                                                       FontWeight="SemiBold"
                                                       Foreground="{Binding RowCountColor}"
                                                       HorizontalAlignment="Right"
                                                       Margin="0,2,0,0"
                                                       Visibility="{Binding HasRecords, Converter={StaticResource BoolToCollapsedConverter}}"/>

                                            <!-- Badges row: Parallelism, Cache hit, Callback warning -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,2,0,0">
                                                <!-- Parallelism badge (shows thread count for parallel SE operations) -->
                                                <Border Background="#6366F1"
                                                        CornerRadius="2"
                                                        Padding="4,1"
                                                        Margin="0,0,4,0"
                                                        Visibility="{Binding HasParallelism, Converter={StaticResource BoolToCollapsedConverter}}"
                                                        ToolTip="{Binding ParallelismDisplay}">
                                                    <TextBlock Text="{Binding Parallelism, StringFormat=x{0}}"
                                                               FontSize="8"
                                                               FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Border>
                                                <!-- Cache hit indicator -->
                                                <Border Background="#2196F3"
                                                        CornerRadius="2"
                                                        Padding="4,1"
                                                        Margin="0,0,4,0"
                                                        Visibility="{Binding IsCacheHit, Converter={StaticResource BoolToCollapsedConverter}}">
                                                    <TextBlock Text="Cache"
                                                               FontSize="8"
                                                               FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Border>
                                                <!-- Callback warning indicator with emoji -->
                                                <Border Background="#FF5722"
                                                        CornerRadius="2"
                                                        Padding="4,1"
                                                        Margin="0,0,4,0"
                                                        Visibility="{Binding HasCallback, Converter={StaticResource BoolToCollapsedConverter}}"
                                                        ToolTip="⚠️ CallbackDataID - SE calling FE (results NOT cached)">
                                                    <TextBlock FontSize="8"
                                                               FontWeight="Bold"
                                                               Foreground="White">
                                                        <Run Text="⚠"/>
                                                        <Run Text=" CB"/>
                                                    </TextBlock>
                                                </Border>
                                            </StackPanel>

                                            <!-- Issue indicator (top-right corner) -->
                                            <TextBlock Grid.Row="0"
                                                       Text="⚠️"
                                                       FontSize="12"
                                                       HorizontalAlignment="Right"
                                                       VerticalAlignment="Top"
                                                       Margin="0,-4,-2,0"
                                                       Visibility="{Binding HasIssues, Converter={StaticResource BoolToCollapsedConverter}}"
                                                       ToolTip="This node has performance issues"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Canvas>
                </ScrollViewer>
            </controls:ClipBorder>

            <GridSplitter Grid.Column="1"
                          Width="5"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="Transparent"/>

            <!-- Right panel with TabControl for Node Details and Issues -->
            <controls:ClipBorder Grid.Column="2"
                                 CornerRadius="4"
                                 BorderThickness="1"
                                 BorderBrush="{DynamicResource Theme.Brush.Control.Border}">
                <TabControl Background="{DynamicResource Theme.Brush.Content.Back}"
                            BorderThickness="0"
                            Padding="0"
                            SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Padding" Value="12,6"/>
                            <Setter Property="Margin" Value="2,0"/>
                        </Style>
                    </TabControl.Resources>

                    <!-- Node Details Tab (index 0) -->
                    <TabItem Header="Node Details">
                        <Grid>
                            <!-- No node selected message - show when NO node is selected -->
                            <TextBlock Text="Select a node to view details"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource MutedTextBrush}"
                                       Visibility="{Binding HasSelectedNode, Converter={StaticResource BoolToNotCollapsedConverter}}"/>

                            <!-- Node details content - show when a node IS selected -->
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled"
                                          Visibility="{Binding HasSelectedNode, Converter={StaticResource BoolToCollapsedConverter}}">
                                <StackPanel Margin="8" DataContext="{Binding SelectedNode}">
                                    <!-- Node header with operator name -->
                                    <Border Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                                            CornerRadius="4"
                                            Padding="8"
                                            Margin="0,0,0,8">
                                        <StackPanel>
                                            <TextBlock Text="{Binding OperatorDisplayName}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource Theme.Brush.Default.Fore}"/>
                                            <TextBlock Text="{Binding OperatorDescription}"
                                                       TextWrapping="Wrap"
                                                       FontSize="10"
                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- 1. ENGINE SECTION (FE/SE) - Only show when engine type is known -->
                                    <StackPanel Visibility="{Binding HasEngineBadge, Converter={StaticResource BoolToCollapsedConverter}}">
                                        <TextBlock Text="ENGINE"
                                                   FontWeight="Bold"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource MutedTextBrush}"
                                                   Margin="0,0,0,4"/>
                                        <Border CornerRadius="4"
                                                Padding="10,8"
                                                Margin="0,0,0,10"
                                                HorizontalAlignment="Left"
                                                Background="{Binding EngineBadgeBackground}">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding EngineBadge}"
                                                               FontSize="16"
                                                               FontWeight="Bold"
                                                               Foreground="{Binding EngineBadgeForeground}"
                                                               Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding EngineTypeDisplay}"
                                                               FontSize="12"
                                                               Foreground="{Binding EngineBadgeForeground}"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                    <TextBlock FontSize="10"
                                                               Foreground="{Binding EngineBadgeForeground}"
                                                               Opacity="0.85">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text" Value="Multi-threaded, highly optimized"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding EngineBadge}" Value="FE">
                                                                        <Setter Property="Text" Value="Single-threaded, handles complex DAX"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <!-- Parallelism indicator -->
                                                    <Border Background="White"
                                                            Opacity="0.9"
                                                            CornerRadius="3"
                                                            Padding="6,2"
                                                            Margin="8,0,0,0"
                                                            Visibility="{Binding HasParallelism, Converter={StaticResource BoolToCollapsedConverter}}">
                                                        <TextBlock Text="{Binding ParallelismDisplay}"
                                                                   FontSize="10"
                                                                   FontWeight="Bold"
                                                                   Foreground="{Binding EngineBadgeBackground}"/>
                                                    </Border>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>

                                    <!-- 1b. EXECUTION METRICS (Root Node Only) - Query-level timing summary -->
                                    <StackPanel Visibility="{Binding HasExecutionMetrics, Converter={StaticResource BoolToCollapsedConverter}}">
                                        <TextBlock Text="EXECUTION METRICS"
                                                   FontWeight="Bold"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource MutedTextBrush}"
                                                   Margin="0,0,0,4"/>
                                        <Border Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                                                CornerRadius="3"
                                                Padding="8"
                                                Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0"
                                                           Text="Total Duration:"
                                                           Foreground="{DynamicResource MutedTextBrush}"
                                                           Margin="0,0,12,4"/>
                                                <TextBlock Grid.Row="0" Grid.Column="1"
                                                           Text="{Binding PlanTotalDurationMs, StringFormat={}{0:N0} ms}"
                                                           FontWeight="Bold"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource Theme.Brush.Default.Fore}"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0"
                                                           Text="Formula Engine:"
                                                           Foreground="{DynamicResource MutedTextBrush}"
                                                           Margin="0,0,12,4"/>
                                                <TextBlock Grid.Row="1" Grid.Column="1"
                                                           Text="{Binding PlanFormulaEngineDurationMs, StringFormat={}{0:N0} ms}"
                                                           FontWeight="SemiBold"
                                                           Foreground="#9A3412"/>

                                                <TextBlock Grid.Row="2" Grid.Column="0"
                                                           Text="Storage Engine:"
                                                           Foreground="{DynamicResource MutedTextBrush}"
                                                           Margin="0,0,12,4"/>
                                                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                                                    <TextBlock Text="{Binding PlanStorageEngineDurationMs, StringFormat={}{0:N0} ms}"
                                                               FontWeight="SemiBold"
                                                               Foreground="#1E3A8A"/>
                                                    <TextBlock Text="{Binding SEParallelismFactor}"
                                                               FontSize="10"
                                                               Foreground="#666"
                                                               Margin="6,0,0,0"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>

                                                <TextBlock Grid.Row="3" Grid.Column="0"
                                                           Text="SE Queries:"
                                                           Foreground="{DynamicResource MutedTextBrush}"
                                                           Margin="0,0,12,4"/>
                                                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                                                    <TextBlock Text="{Binding PlanStorageEngineQueryCount, StringFormat={}{0:N0}}"
                                                               FontWeight="SemiBold"
                                                               Foreground="{DynamicResource Theme.Brush.Default.Fore}"/>
                                                    <TextBlock Text="{Binding PlanCacheHits, StringFormat=({0} cached)}"
                                                               FontSize="10"
                                                               Foreground="#666"
                                                               Margin="6,0,0,0"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>

                                                <TextBlock Grid.Row="4" Grid.Column="0"
                                                           Text="SE CPU Time:"
                                                           Foreground="{DynamicResource MutedTextBrush}"
                                                           Margin="0,0,12,0"/>
                                                <TextBlock Grid.Row="4" Grid.Column="1"
                                                           Text="{Binding PlanStorageEngineCpuMs, StringFormat={}{0:N0} ms}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource Theme.Brush.Default.Fore}"/>
                                            </Grid>
                                        </Border>
                                    </StackPanel>

                                    <!-- 2a. SIMPLE ROW COUNT - When only row count is available -->
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,0,0,10"
                                                Visibility="{Binding HasOnlyRowCount, Converter={StaticResource BoolToCollapsedConverter}}">
                                        <TextBlock Text="Rows: "
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource MutedTextBrush}"/>
                                        <TextBlock Text="{Binding RecordsWithSourceDisplay}"
                                                   FontWeight="Bold"
                                                   Foreground="{Binding RowCountColor}"/>
                                    </StackPanel>

                                    <!-- 2b. PERFORMANCE METRICS - Full section when we have detailed metrics -->
                                    <StackPanel Visibility="{Binding HasDetailedPerformanceMetrics, Converter={StaticResource BoolToCollapsedConverter}}">
                                        <TextBlock Text="PERFORMANCE METRICS"
                                                   FontWeight="Bold"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource MutedTextBrush}"
                                                   Margin="0,0,0,4"/>
                                        <Border Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                                                CornerRadius="3"
                                                Padding="8"
                                                Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Rows with severity color and source indicator -->
                                            <TextBlock Grid.Row="0" Grid.Column="0"
                                                       Text="Rows:"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                       Margin="0,0,12,4"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1"
                                                       Text="{Binding RecordsWithSourceDisplay}"
                                                       FontWeight="Bold"
                                                       FontSize="12"
                                                       Foreground="{Binding RowCountColor}"
                                                       Margin="0,0,0,4"/>

                                            <!-- Duration -->
                                            <TextBlock Grid.Row="1" Grid.Column="0"
                                                       Text="Duration:"
                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                       Margin="0,0,12,4"
                                                       Visibility="{Binding HasDuration, Converter={StaticResource BoolToCollapsedConverter}}"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1"
                                                       Text="{Binding DurationDisplay}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource Theme.Brush.Default.Fore}"
                                                       Margin="0,0,0,4"
                                                       Visibility="{Binding HasDuration, Converter={StaticResource BoolToCollapsedConverter}}"/>

                                            <!-- CPU Time -->
                                            <TextBlock Grid.Row="2" Grid.Column="0"
                                                       Text="CPU Time:"
                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                       Margin="0,0,12,4"
                                                       Visibility="{Binding HasCpuTime, Converter={StaticResource BoolToCollapsedConverter}}"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1"
                                                       Text="{Binding CpuTimeDisplay}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource Theme.Brush.Default.Fore}"
                                                       Margin="0,0,0,4"
                                                       Visibility="{Binding HasCpuTime, Converter={StaticResource BoolToCollapsedConverter}}"/>

                                            <!-- Net Parallel Duration -->
                                            <TextBlock Grid.Row="3" Grid.Column="0"
                                                       Text="Net Duration:"
                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                       Margin="0,0,12,4"
                                                       Visibility="{Binding HasNetParallelDuration, Converter={StaticResource BoolToCollapsedConverter}}"/>
                                            <TextBlock Grid.Row="3" Grid.Column="1"
                                                       Text="{Binding NetParallelDurationDisplay}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource Theme.Brush.Default.Fore}"
                                                       Margin="0,0,0,4"
                                                       Visibility="{Binding HasNetParallelDuration, Converter={StaticResource BoolToCollapsedConverter}}"/>

                                            <!-- Data Size -->
                                            <TextBlock Grid.Row="4" Grid.Column="0"
                                                       Text="Data Size:"
                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                       Margin="0,0,12,4"
                                                       Visibility="{Binding HasDataSize, Converter={StaticResource BoolToCollapsedConverter}}"/>
                                            <TextBlock Grid.Row="4" Grid.Column="1"
                                                       Text="{Binding DataSizeDisplay}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource Theme.Brush.Default.Fore}"
                                                       Margin="0,0,0,4"
                                                       Visibility="{Binding HasDataSize, Converter={StaticResource BoolToCollapsedConverter}}"/>

                                        </Grid>
                                        </Border>
                                    </StackPanel>

                                    <!-- 3. CALLBACK WARNING (if CallbackDataID present) -->
                                    <Border Background="#FFF3E0"
                                            BorderBrush="#FF5722"
                                            BorderThickness="0,0,0,3"
                                            CornerRadius="3"
                                            Padding="10"
                                            Margin="0,0,0,10"
                                            Visibility="{Binding HasCallback, Converter={StaticResource BoolToCollapsedConverter}}">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                <TextBlock Text="⚠️" FontSize="14" Margin="0,0,6,0"/>
                                                <TextBlock Text="CALLBACK DETECTED"
                                                           FontWeight="Bold"
                                                           FontSize="11"
                                                           Foreground="#FF5722"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding CallbackWarningText}"
                                                       TextWrapping="Wrap"
                                                       FontSize="10"
                                                       Foreground="#333"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                                <TextBlock Text="CallbackDataID: "
                                                           FontSize="10"
                                                           Foreground="#666"/>
                                                <TextBlock Text="{Binding CallbackDataId}"
                                                           FontSize="10"
                                                           FontWeight="Bold"
                                                           Foreground="#FF5722"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <!-- 4. DAX MEASURE REFERENCE -->
                                    <StackPanel Visibility="{Binding HasMeasureReference, Converter={StaticResource BoolToCollapsedConverter}}">
                                        <TextBlock Text="DAX REFERENCE"
                                                   FontWeight="Bold"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource MutedTextBrush}"
                                                   Margin="0,0,0,4"/>
                                        <Border Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                                                CornerRadius="3"
                                                Padding="8"
                                                Margin="0,0,0,10">
                                            <StackPanel>
                                                <TextBlock Text="{Binding MeasureReference}"
                                                           FontFamily="Consolas"
                                                           FontSize="11"
                                                           FontWeight="SemiBold"
                                                           Foreground="#0066CC"/>
                                                <!-- Measure formula (if available) -->
                                                <Border Background="{DynamicResource Theme.Brush.Content.Back}"
                                                        BorderBrush="{DynamicResource Theme.Brush.Control.Border}"
                                                        BorderThickness="1"
                                                        CornerRadius="3"
                                                        Padding="8"
                                                        Margin="0,6,0,0"
                                                        Visibility="{Binding HasMeasureFormula, Converter={StaticResource BoolToCollapsedConverter}}">
                                                    <TextBlock Text="{Binding MeasureFormula}"
                                                               FontFamily="Consolas"
                                                               FontSize="10"
                                                               TextWrapping="Wrap"
                                                               Foreground="{DynamicResource Theme.Brush.Default.Fore}"/>
                                                </Border>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>

                                    <!-- 4b. TYPE COERCION -->
                                    <StackPanel Visibility="{Binding HasTypeCoercion, Converter={StaticResource BoolToCollapsedConverter}}">
                                        <TextBlock Text="TYPE COERCION"
                                                   FontWeight="Bold"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource MutedTextBrush}"
                                                   Margin="0,0,0,4"/>
                                        <Border Background="#FFF3E0"
                                                CornerRadius="3"
                                                Padding="8"
                                                Margin="0,0,0,10">
                                            <TextBlock Text="{Binding TypeCoercionInfo}"
                                                       FontFamily="Consolas"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="#E65100"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- 4c. VARIABLE DEFINITION (for TableVarProxy nodes) -->
                                    <StackPanel Visibility="{Binding HasVariableDefinition, Converter={StaticResource BoolToCollapsedConverter}}">
                                        <TextBlock Text="VARIABLE DEFINITION"
                                                   FontWeight="Bold"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource MutedTextBrush}"
                                                   Margin="0,0,0,4"/>
                                        <Border Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                                                CornerRadius="3"
                                                Padding="8"
                                                Margin="0,0,0,10">
                                            <TextBlock Text="{Binding VariableDefinition}"
                                                       FontFamily="Consolas"
                                                       FontSize="10"
                                                       TextWrapping="Wrap"
                                                       Foreground="{DynamicResource Theme.Brush.Default.Fore}"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- 5. DATA REFERENCES (Table/Column names) -->
                                    <StackPanel Visibility="{Binding HasTableReference, Converter={StaticResource BoolToCollapsedConverter}}">
                                        <TextBlock Text="DATA REFERENCES"
                                                   FontWeight="Bold"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource MutedTextBrush}"
                                                   Margin="0,0,0,4"/>
                                        <Border Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                                                CornerRadius="3"
                                                Padding="8"
                                                Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <TextBlock Grid.Row="0" Grid.Column="0"
                                                           Text="Table:"
                                                           Foreground="{DynamicResource MutedTextBrush}"
                                                           Margin="0,0,12,4"/>
                                                <TextBlock Grid.Row="0" Grid.Column="1"
                                                           Text="{Binding TableReference}"
                                                           FontWeight="SemiBold"
                                                           FontFamily="Consolas"
                                                           Foreground="{DynamicResource Theme.Brush.Default.Fore}"/>
                                                <TextBlock Grid.Row="1" Grid.Column="0"
                                                           Text="Columns:"
                                                           Foreground="{DynamicResource MutedTextBrush}"
                                                           Margin="0,0,12,0"
                                                           Visibility="{Binding HasColumnReferences, Converter={StaticResource BoolToCollapsedConverter}}"/>
                                                <TextBlock Grid.Row="1" Grid.Column="1"
                                                           Text="{Binding ColumnReferences}"
                                                           TextWrapping="Wrap"
                                                           FontFamily="Consolas"
                                                           FontSize="10"
                                                           Foreground="{DynamicResource Theme.Brush.Default.Fore}"
                                                           Visibility="{Binding HasColumnReferences, Converter={StaticResource BoolToCollapsedConverter}}"/>
                                            </Grid>
                                        </Border>
                                    </StackPanel>

                                    <!-- 6. xmSQL Section (Storage Engine Query) -->
                                    <StackPanel Visibility="{Binding HasXmSql, Converter={StaticResource BoolToCollapsedConverter}}">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="xmSQL QUERY"
                                                       FontWeight="Bold"
                                                       FontSize="10"
                                                       Foreground="{DynamicResource MutedTextBrush}"/>
                                            <Border Background="{DynamicResource Theme.Brush.Accent}"
                                                    CornerRadius="2"
                                                    Padding="4,1"
                                                    Margin="8,0,0,0"
                                                    Visibility="{Binding IsCacheHit, Converter={StaticResource BoolToCollapsedConverter}}">
                                                <TextBlock Text="CACHE HIT"
                                                           FontSize="8"
                                                           FontWeight="Bold"
                                                           Foreground="White"/>
                                            </Border>
                                        </StackPanel>
                                        <Border Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                                                CornerRadius="3"
                                                Padding="8"
                                                Margin="0,0,0,10">
                                            <TextBlock Text="{Binding ResolvedXmSql}"
                                                       TextWrapping="Wrap"
                                                       FontFamily="Consolas"
                                                       FontSize="10"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- 7. Full Operation (collapsed by default, more technical) -->
                                    <TextBlock Text="OPERATION STRING"
                                               FontWeight="Bold"
                                               FontSize="10"
                                               Foreground="{DynamicResource MutedTextBrush}"
                                               Margin="0,0,0,4"/>
                                    <Border Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                                            CornerRadius="3"
                                            Padding="6"
                                            Margin="0,0,0,10">
                                        <TextBlock Text="{Binding FullOperation}"
                                                   TextWrapping="Wrap"
                                                   FontFamily="Consolas"
                                                   FontSize="9"
                                                   Foreground="{DynamicResource MutedTextBrush}"/>
                                    </Border>

                                    <!-- 7b. Collapsed Proxy Operations (when proxy chains were flattened) -->
                                    <StackPanel Visibility="{Binding HasCollapsedProxyOperations, Converter={StaticResource BoolToCollapsedConverter}}">
                                        <TextBlock Text="COLLAPSED PROXY NODES"
                                                   FontWeight="Bold"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource MutedTextBrush}"
                                                   Margin="0,0,0,4"/>
                                        <Border Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                                                CornerRadius="3"
                                                Padding="6"
                                                Margin="0,0,0,10">
                                            <StackPanel>
                                                <TextBlock Text="{Binding CollapsedProxyDisplay}"
                                                           FontSize="10"
                                                           Foreground="{DynamicResource MutedTextBrush}"
                                                           Margin="0,0,0,4"/>
                                                <ItemsControl ItemsSource="{Binding CollapsedProxyOperations}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding}"
                                                                       TextWrapping="Wrap"
                                                                       FontFamily="Consolas"
                                                                       FontSize="9"
                                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                                       Margin="0,2,0,0"/>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>

                                    <!-- Issues Section (if any) -->
                                    <StackPanel Visibility="{Binding HasIssues, Converter={StaticResource BoolToCollapsedConverter}}">
                                        <TextBlock Text="ISSUES"
                                                   FontWeight="Bold"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource MutedTextBrush}"
                                                   Margin="0,0,0,4"/>
                                        <ItemsControl ItemsSource="{Binding Issues}" Margin="0,0,0,10">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                                                            BorderBrush="#FFFFA500"
                                                            BorderThickness="0,0,0,2"
                                                            CornerRadius="3"
                                                            Padding="8"
                                                            Margin="0,0,0,4">
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding IssueType}"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="#FFFF8C00"/>
                                                            <TextBlock Text="{Binding Description}"
                                                                       TextWrapping="Wrap"
                                                                       FontSize="11"
                                                                       Margin="0,4,0,0"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                    <!-- 8. DOCUMENTATION LINKS - filtered by plan type -->
                                    <TextBlock Text="DOCUMENTATION"
                                               FontWeight="Bold"
                                               FontSize="10"
                                               Foreground="{DynamicResource MutedTextBrush}"
                                               Margin="0,0,0,4"/>
                                    <Border Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                                            CornerRadius="3"
                                            Padding="8"
                                            Margin="0,0,0,0">
                                        <StackPanel>
                                            <!-- dax.guide link for the specific DAX function (if applicable) -->
                                            <TextBlock Margin="0,0,0,4"
                                                       Visibility="{Binding HasDaxGuideUrl, Converter={StaticResource BoolToCollapsedConverter}}">
                                                <Hyperlink NavigateUri="{Binding DaxGuideUrl}"
                                                           RequestNavigate="Hyperlink_RequestNavigate">
                                                    <TextBlock>
                                                        <Run Text="{Binding OperatorDisplayName, Mode=OneWay}"/>
                                                        <Run Text=" (dax.guide)"/>
                                                    </TextBlock>
                                                </Hyperlink>
                                            </TextBlock>
                                            <!-- Logical Plan doc - shown when viewing logical plan -->
                                            <TextBlock Margin="0,0,0,4"
                                                       Visibility="{Binding DataContext.ShowLogicalPlan, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToCollapsedConverter}}">
                                                <Hyperlink NavigateUri="https://docs.sqlbi.com/dax-internals/vertipaq/logical-query-plan"
                                                           RequestNavigate="Hyperlink_RequestNavigate">
                                                    Logical Query Plan (SQLBI)
                                                </Hyperlink>
                                            </TextBlock>
                                            <!-- Physical Plan doc - shown when viewing physical plan -->
                                            <TextBlock Margin="0,0,0,4"
                                                       Visibility="{Binding DataContext.ShowPhysicalPlan, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToCollapsedConverter}}">
                                                <Hyperlink NavigateUri="https://docs.sqlbi.com/dax-internals/vertipaq/physical-query-plan"
                                                           RequestNavigate="Hyperlink_RequestNavigate">
                                                    Physical Query Plan (SQLBI)
                                                </Hyperlink>
                                            </TextBlock>
                                            <!-- xmSQL doc - shown only when selected node has xmSQL data -->
                                            <TextBlock Visibility="{Binding HasXmSql, Converter={StaticResource BoolToCollapsedConverter}}">
                                                <Hyperlink NavigateUri="https://docs.sqlbi.com/dax-internals/vertipaq/xmSQL"
                                                           RequestNavigate="Hyperlink_RequestNavigate">
                                                    xmSQL Reference (SQLBI)
                                                </Hyperlink>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </TabItem>

                    <!-- Issues Tab (index 1) -->
                    <TabItem Header="Issues">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Issues count header -->
                            <Border Grid.Row="0"
                                    Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                                    Padding="8,4">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding IssueCount}" FontWeight="SemiBold"/>
                                    <TextBlock Text=" issue(s) detected" Foreground="{DynamicResource MutedTextBrush}"/>
                                </StackPanel>
                            </Border>

                            <!-- Issues list with expandable items -->
                            <ListBox Grid.Row="1"
                                     ItemsSource="{Binding Issues}"
                                     SelectedItem="{Binding SelectedIssue}"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding BackgroundBrush}"
                                                BorderBrush="{DynamicResource Theme.Brush.Control.Border}"
                                                BorderThickness="0,0,0,1"
                                                Padding="0">
                                            <StackPanel>
                                                <!-- Issue header (always visible) -->
                                                <Grid Margin="8,6" Cursor="Hand"
                                                      cal:Message.Attach="[Event MouseLeftButtonDown] = [Action ToggleExpanded]">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Severity icon -->
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding SeverityIcon}"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="14"
                                                               Foreground="{Binding SeverityBrush}"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,8,0"/>

                                                    <!-- Title -->
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding Title}"
                                                               FontWeight="SemiBold"
                                                               TextTrimming="CharacterEllipsis"
                                                               VerticalAlignment="Center"/>

                                                    <!-- Expand/collapse indicator -->
                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding ExpanderIcon}"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="10"
                                                               Foreground="{DynamicResource MutedTextBrush}"
                                                               VerticalAlignment="Center"
                                                               Margin="4,0,0,0"/>
                                                </Grid>

                                                <!-- Expanded details -->
                                                <StackPanel Margin="32,0,8,8"
                                                            Visibility="{Binding IsExpanded, Converter={StaticResource BoolToCollapsedConverter}}">
                                                    <!-- Description -->
                                                    <TextBlock Text="{Binding Description}"
                                                               TextWrapping="Wrap"
                                                               FontSize="11"
                                                               Foreground="{DynamicResource MutedTextBrush}"
                                                               Margin="0,0,0,4"/>

                                                    <!-- Metric info -->
                                                    <StackPanel Orientation="Horizontal"
                                                                Visibility="{Binding HasMetricInfo, Converter={StaticResource BoolToCollapsedConverter}}"
                                                                Margin="0,4,0,0">
                                                        <TextBlock Text="Value: " FontSize="11" Foreground="{DynamicResource MutedTextBrush}"/>
                                                        <TextBlock Text="{Binding MetricDisplay}" FontSize="11" FontWeight="SemiBold"/>
                                                        <TextBlock Text=" / Threshold: " FontSize="11" Foreground="{DynamicResource MutedTextBrush}"/>
                                                        <TextBlock Text="{Binding ThresholdDisplay}" FontSize="11" FontWeight="SemiBold"/>
                                                    </StackPanel>

                                                    <!-- Remediation suggestion -->
                                                    <Border Visibility="{Binding HasRemediation, Converter={StaticResource BoolToCollapsedConverter}}"
                                                            Background="{DynamicResource Theme.Brush.MenuBar.Back}"
                                                            CornerRadius="3"
                                                            Margin="0,8,0,0"
                                                            Padding="8,6">
                                                        <StackPanel>
                                                            <TextBlock Text="Suggestion"
                                                                       FontWeight="SemiBold"
                                                                       FontSize="10"
                                                                       Foreground="{DynamicResource MutedTextBrush}"
                                                                       Margin="0,0,0,4"/>
                                                            <TextBlock Text="{Binding Remediation}"
                                                                       TextWrapping="Wrap"
                                                                       FontSize="11"/>
                                                        </StackPanel>
                                                    </Border>

                                                    <!-- Navigate to node button -->
                                                    <Button Content="Go to Node"
                                                            Margin="0,8,0,0"
                                                            Padding="8,4"
                                                            HorizontalAlignment="Left"
                                                            cal:Action.TargetWithoutContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            cal:Message.Attach="[Event Click] = [Action NavigateToIssue($dataContext)]"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <!-- No issues message - show when HasIssues is false -->
                            <TextBlock Grid.Row="1"
                                       Text="No issues detected"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource MutedTextBrush}"
                                       Visibility="{Binding HasNoIssues, Converter={StaticResource BoolToHiddenConverter}}"/>
                        </Grid>
                    </TabItem>
                </TabControl>
            </controls:ClipBorder>
        </Grid>

        <!-- Busy overlay -->
        <Border Grid.Row="1" Grid.RowSpan="2"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                Style="{StaticResource BusyPanel}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <ProgressBar x:Name="spinner"
                             Style="{StaticResource MaterialDesignCircularProgressBar}"
                             Width="24" Height="24"
                             Margin="0 0 10 0"
                             Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <Label x:Name="BusyMessage" Style="{StaticResource SpinnerLabel}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
